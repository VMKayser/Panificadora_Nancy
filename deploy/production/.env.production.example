# Copy this file to backend/.env.production and fill values
APP_NAME=PanificadoraNancy
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://example.com
LOG_CHANNEL=stack

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=panificadora
DB_USERNAME=panificadora
DB_PASSWORD=secret

# Cache / Session / Queue (prefer Redis in production)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=you@example.com
MAIL_PASSWORD=secret
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@example.com
MAIL_FROM_NAME="Panificadora Nancy"

# WhatsApp API (provider specific)
WHATSAPP_PROVIDER=facebook_graph
WHATSAPP_PHONE_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_FROM_NUMBER=

# App-specific config
APP_TIMEZONE=America/La_Paz
APP_LOCALE=es

# Optional Sentry
SENTRY_DSN=

# Security
TRUSTED_PROXIES=0.0.0.0/0
TRUSTED_HOSTS=example.com

# Other
VITE_API_URL=https://example.com/api

# Notes:
# - Do NOT commit backend/.env.production to git. Keep secrets in a secure vault.
# - Run `php artisan config:cache` after updating env in production.
